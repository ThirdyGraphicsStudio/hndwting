<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Output">



    <androidx.core.widget.NestedScrollView
        android:id="@+id/parentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/ll_output"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:layout_marginBottom="120dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/scan_fill"
                    app:backgroundTint="@color/primary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserratblack"
                    android:text="HANDWRITTEN"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="10dp"
                    android:textAlignment="center"
                    />


            </LinearLayout>


            <EditText
                android:id="@+id/et_output"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="dsadasdasdasdasd"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:fontFamily="@font/montserratmedium"
                android:textSize="20sp"
                android:layout_marginBottom="120dp"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheck"
                android:layout_marginBottom="10dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:stateListAnimator="@null"
                android:layout_marginHorizontal="50dp"
                android:text="Check Grammar"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/secondary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPdf"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:stateListAnimator="@null"
                android:layout_marginHorizontal="50dp"
                android:text="SAVE AS PDF"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/secondary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTxt"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratsemibold"
                android:padding="14dp"
                android:stateListAnimator="@null"
                android:text="SAVE AS txt"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:rippleColor="@color/secondary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDocs"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratsemibold"
                android:padding="14dp"
                android:stateListAnimator="@null"
                android:text="SAVE AS DOCS"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:rippleColor="@color/secondary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="1120dp"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/secondary"
        android:indeterminateTintMode="src_atop"
        android:indeterminate="true"
        />



</RelativeLayout>